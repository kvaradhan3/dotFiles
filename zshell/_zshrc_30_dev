path+=( "$(go env GOPATH)"/bin )

#
# kubernetes Aliases
#
#source /usr/local/share/zsh/site-functions/_kubectl
alias ka='kubeadm'

alias ks='kubectl -n kube-system'
alias kn='kubectl -n'
alias k='kubectl'
#
alias -g .an='--all-namespaces'
alias -g .w='--watch'
alias -g del=delete
#
alias kl='kubectl logs -f'
alias kls='kubectl -n kube-system logs -f'

kln() {
    ns=$1 ; shift
    kubectl -n "$ns" logs -f "$@"
}

path+=( "$HOME/.krew" )
