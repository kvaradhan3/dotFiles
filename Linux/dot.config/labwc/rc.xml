<?xml version="1.0"?>

<labwc_config>

  <theme>
    <name>Raven-Cyan</name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <placement policy="automatic" />

  <keyboard>
    <default />
  </keyboard>

  <mouse>
    <default />
  </mouse>

  <!--
      Desktop Settings.
  -->
  <desktops number="4" popupTime="500" prefix="ws" />
  <keyboard>

    <keybind key="A-Tab">
      <action name="NextWindow" workspace="all" />
    </keybind>

    <keybind key="A-S-Tab">
      <action name="PreviousWindow" workspace="all" />
    </keybind>

    <keybind key="C-A-Tab">
      <action name="NextWindow" workspace="current" />
    </keybind>

    <keybind key="C-A-S-Tab">
      <action name="PreviousWindow" workspace="current" />
    </keybind>

    <keybind key="W-A-Right"
	     name.action="GoToDesktop"
	     to.action="right"
	     wrap.action="yes"
	     />
    <keybind key="W-A-Left"
	     name.action="GoToDesktop"
	     to.action="left"
	     wrap.action="yes"
	     />
    <keybind key="W-1"
	     name.action="GoToDesktop"
	     to.action="ws 1"
	     />
    <keybind key="W-2"
	     name.action="GoToDesktop"
	     to.action="ws 2"
	     />
    <keybind key="W-3"
	     name.action="GoToDesktop"
	     to.action="ws 3"
	     />
    <keybind key="W-4"
	     name.action="GoToDesktop"
	     to.action="ws 4"
	     />
    <keybind key="W-Tab"
	     name.action="GoToDesktop"
	     to.action="last"
	     />
    <keybind key="C-W-A-Right"
	     name.action="SendToDesktop"
	     to.action="right"
	     wrap.action="yes"
	     />
    <keybind key="C-W-A-Left"
	     name.action="SendToDesktop"
	     to.action="left"
	     wrap.action="yes"
	     />
    <keybind key="C-W-1"
	     name.action="SendToDesktop"
	     to.action="ws 1"
	     />
    <keybind key="C-W-2"
	     name.action="SendToDesktop"
	     to.action="ws 2"
	     />
    <keybind key="C-W-3"
	     name.action="SendToDesktop"
	     to.action="ws 3"
	     />
    <keybind key="C-W-4"
	     name.action="SendToDesktop"
	     to.action="ws 4"
	     />
  </keyboard>

  <!--
      Keyboard bindings and settings.
  -->
  <keyboard>
    <keybind key="W-Return"
	     name.action="Execute"
	     command.action="foot"
	     />

    <keybind key="Super_L" onRelease="yes">
      <action name="Execute">
        <command>sh -c 'pkill wofi || wofi --show drun'</command>
      </action>
    </keybind>

    <keybind key="Super_R" onRelease="yes">
      <action name="Execute">
        <command>sh -c 'pkill wofi || wofi --show drun'</command>
      </action>
    </keybind>

    <keybind key="W" onRelease="yes">
      <action name="Execute">
        <command>sh -c 'pkill wofi || wofi --show drun'</command>
      </action>
    </keybind>

    <keybind key="W-F4">
      <action name="Execute">
        <command>
          sh -c 'grim
                   -g "$(slurp)"
                   "$(xdg-user-dir)/Pictures/screenshot-$(date +%FT%T.$(date +%N | cut -c1-3)).png"'
        </command>
      </action>
    </keybind>

    <keybind key="S-W-F4">
      <action name="Execute">
        <command>
          sh -c 'grim
                   "$(xdg-user-dir)/Pictures/desktop-$(date +%FT%T.$(date +%N | cut -c1-3)).png"'
        </command>
      </action>
    </keybind>

    <keybind key="C-W-F4">
      <action name="Execute">
        <command>
          sh -c 'grim -g "$(slurp)" - |  wl-copy'
        </command>
      </action>
    </keybind>

    <keybind key="S-C-W-F4">
      <action name="Execute">
        <command>
          sh -c 'grim - | wl-copy'
        </command>
      </action>
    </keybind>

    <keybind key="W-d"
	     name.action="Exit"
	     />

    <keybind key="W--"
	     name.action="ToggleShade"
	     />

    <keybind key="W-0"
	     name.action="Iconify"
	     />


    <keybind key="W-h">
      <action name="SnapToEdge" direction="left" combine="yes" />
    </keybind>

    <keybind key="W-j">
      <action name="SnapToEdge" direction="down" combine="yes" />
    </keybind>

    <keybind key="W-k">
      <action name="SnapToEdge" direction="up" combine="yes" />
    </keybind>

    <keybind key="W-l">
      <action name="SnapToEdge" direction="right" combine="yes" />
    </keybind>

    <keybind key="W-y">
      <action name="SnapToEdge" direction="up=left" combine="yes" />
    </keybind>

    <keybind key="W-u">
      <action name="SnapToEdge" direction="up-right" combine="yes" />
    </keybind>

    <keybind key="W-b">
      <action name="SnapToEdge" direction="down-left" combine="yes" />
    </keybind>

    <keybind key="W-n">
      <action name="SnapToEdge" direction="down-right" combine="yes" />
    </keybind>

  </keyboard>

  <!--
      Mouse Configuration
  -->
  <focus>
    <followMouse>yes</followMouse>
    <followMouseRequiresMovement>no</followMouseRequiresMovement>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <mouse>
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>
