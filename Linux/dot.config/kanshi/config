# include "$XDG_CONFIG_HOME/kanshi/$(uname -n).conf"

output "Apple Computer Inc Color LCD" {
  mode          1920x1080@60
  position      0,0
  transform     normal
  scale         0.8
  adaptive_sync off
  alias         $APPLE_EXTERNAL
}

output "LG Electronics LG HDR WQHD 0x0001E191" {
  mode          3440x1440@49.987000
  position      0,0
  transform     normal
  scale         0.8
  adaptive_sync off
  alias         $LG_EXTERNAL
}

output "Acer Technologies B277 E 331604C5B3W01" {
  mode         1920x1080@60.000000
  position     0,0
  transform    normal
  scale        0.75
  adaptive_sync off
  alias         $ACER_EXTERNAL
}

output "BOE 0x0928" {
  mode       1920x1080@60.00000000
  position   1920,0
  scale      1.0
  adaptive_sync off
  alias      $IDK_INTERNAL
}

output eDP-1 {
  mode       1920x1080@60.00000000
  position   2745,0
  scale      0.8
  adaptive_sync off
  alias      $IDK2_INTERNAL
}


profile external-lg-monitor {
  output $LG_EXTERNAL   enable

  # eDP-1 "LG Display 0x04DA (eDP-1)"  Internal diplay on laptop
  output eDP-1          disable
}

profile external-acer-idk-combo-2 {
  output $ACER_EXTERNAL enable
  output $IDK2_INTERNAL enable
}


profile external-acer-idk-combo {
  output $ACER_EXTERNAL enable
  output eDP-1          enable
  # output $IDK_INTERNAL  enable
}

profile apple-external {
  output $APPLE_EXTERNAL enable
}

profile apple-internal-1 {
  output "Apple Computer Inc Color LCD " enable
}

profile apple-internal-2 {
  output eDP-1 enable {
  mode          1920x1080
  position      0,0
  transform     normal
  scale         0.85
  adaptive_sync off
  }
}
