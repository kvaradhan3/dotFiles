case $(tsh ls --format=json "$@" 2>&- | jq length) in
'')
    echo "$CMD $OPT: unknown error" $(tsh ls --format=json "$@" 2>&1)
    ;;
0)
    echo "$CMD $OPT: No host matched for criteria:" "$@" >&2
    ;;
*)
    tsh ls --format=json "$@"                 | \
    jq -C '.[]
           | .metadata.labels + .spec.cmd_labels
           | keys
           | .[]'                             | \
    sort                                      | \
    uniq
    ;;
esac
