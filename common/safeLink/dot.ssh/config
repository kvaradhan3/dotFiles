#
# MacOSX directives
#
Host github.com
  HostName                 github.com
  User                     git
  PreferredAuthentications publickey
  ForwardAgent             no
  ForwardX11               no
  IdentityFile             ~/.ssh/id_ed25519_github

Host gitlab.com
  HostName                 gitlab.com
  User                     git
  PreferredAuthentications publickey
  ForwardAgent             no
  ForwardX11               no
  IdentityFile             ~/.ssh/id_ed25519_gitlab

Host *
  User                     kannan
  AddKeysToAgent           yes
  ForwardAgent             yes
  ForwardX11               no

Include                    config.*
